@model Models.Reports.ReportViewModel

@(Html.Kendo().Grid<Models.Reports.UserViewModel>()
        .Name("usersGrid")
        .Columns(columns =>
        {
            columns.Bound(c => c.UserName);
            columns.Bound(c => c.BooksBorrowed);
        })
        .Scrollable()
        .Sortable()
        .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
        .Filterable(filterable => filterable
            .Extra(false)
            .Operators(operators => operators
                .ForNumber(number => number.Clear()
                    .IsEqualTo("Equal to")
                    .IsGreaterThan("Greater than")
                    .IsGreaterThanOrEqualTo("Greater than or equal to")
                    .IsLessThan("Less than")
                    .IsLessThanOrEqualTo("Less than or equal to"))
                .ForString(str => str.Clear()
                    .StartsWith("Starts with")
                    .IsEqualTo("Is equal to")
                    .IsNotEqualTo("Is not equal to")
                    .Contains("Contains"))
            )
            .Mode(GridFilterMode.Row)
        )
        .BindTo(Model.UsersList)
        //.AutoBind(false)
        .DataSource(dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetMostActiveUsersList", "Reports"))
            .Model(model => model.Id(a => a.UserId))
            .PageSize(20))
        .Selectable(a => a.Type(GridSelectionType.Row))
)